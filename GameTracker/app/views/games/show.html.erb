<h1><%=@game.title%></h1>
<h2>By: <%=@game.user.username%></h2>

<div><%= @game.content%></div>

<p><%= link_to 'See all comments', game_comments_path(@game)%></p>
<p><%= link_to 'Add a new comment', new_game_comment_path(@game)%></p>
<h4>Comments:</h4>
<%= @game.comments.each do |c| %>
  <li><strong><%= c.user.username%></strong> says "<%= link_to c.content, comment_path(c)%></li>
<% end %>